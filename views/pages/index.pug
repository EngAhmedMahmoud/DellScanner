include ../partials/header
.row
        .col-md-6.dell_index
            #{error}
            if(error)
                each err in error
                    .alert.alert-danger #{err} 
            if(save_device)
                .alert.alert-success #{save_device}
            form(method="post" action="/scan")
                .form-group
                    label IP address
                    input.form-control(type='ip', placeholder='Enter IP address',required name="ip" value=`${(ip)?ip:''}`)
                .form-group
                    label Port number
                    input.form-control(type='number', placeholder='Enter Port number',required name="port"  value=`${(port)?port:''}`)
                button.btn.btn-primary(type='submit') Scan
if(devices && devices.length > 0)
    .row
            .col-md-6(style="overflow-x: auto")
                table.table(style="overflow: scroll;")
                    thead.thead-dark
                        tr
                            th(scope='col') IP Address
                            th(scope='col') View
                            th(scope='col') Edit
                            th(scope='col') Delete
                        each device in devices
                            tr
                                td #{device.ip}
                                td 
                                    button.btn.btn-default(href='/view') 
                                        i.fa.fa-eye(style="color:#007bff")
                                td
                                    button.btn.btn-default(href="/edit")
                                        i.fa.fa-edit(style="color:green")
                                td
                                    button.btn.btn-default(href="/delete")
                                        i.fa.fa-trash(style="color:red;")

include ../partials/footer