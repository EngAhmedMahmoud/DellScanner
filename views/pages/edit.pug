include ../partials/header

.row
        .col-md-6.dell_index
            form(method="post" action="/edit_config")
                .form-group
                    label IP address
                    input.form-control(type='ip', placeholder='Enter IP address',required name="ip" value=`${data.ip}`)
                .form-group
                    label Port number
                    input.form-control(type='number', placeholder='Enter Port number',required name="port",value=`${data.port}`)
                .form-group
                    label Name
                    input.form-control(type='text', placeholder='Enter Name',required name="name",value=`${data.name}`)
                .form-group
                    label Branch
                    input.form-control(type='text', placeholder='Enter Branch Name',required name="branch",value=`${data.branch}`)
                .form-group
                    label Sensors Number
                    input.form-control(type='number', placeholder='Enter Branch Name',required name="sensors",value=`${data.sensors}`)
                .form-group
                    label Latitude
                    input.form-control(type='number', placeholder='Enter Latitude',required name="lat",step="0.000000000000001",value=`${data.lat}`)
                .form-group
                    label  Longitude
                    input.form-control(type='number', placeholder='Enter Longitude',required name="lng" ,step="0.000000000000001",value=`${data.lat}`)
                .form-group
                    label  Source
                    input.form-control(type='text', placeholder='Enter source',required name="source",value=`${data.source}`)
                .form-group
                    label  Group
                    input.form-control(type='text', placeholder='Enter group',required name="group",value=`${data.group}`)
                
                button.btn.btn-primary(type='submit') Edit Configuration

include ../partials/footer